extends layout
block head
  link(href='/css/register.css' rel='stylesheet')

block content
  form.form-horizontal(action="/login", method='post', autocomplete='off')
    .center
      h1.col-sm-offset-4 用户登陆
      .form-group
        .col-sm-10.col-sm-offset-1
          input.form-control(id="email", name="email", type="text", placeholder="邮箱账号")
      .form-group
        .col-sm-10.col-sm-offset-1
          input#password.form-control(name="password", type="password", placeholder="密码")
      .form-group.mrbt10.mrt20
        .col-sm-6.col-sm-offset-3
          input(id="signIn", type="button", value="登陆").form-control.btn-primary
block foot
  script(src="/js/login.js")
