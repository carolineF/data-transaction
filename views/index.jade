extends layout
block head
  link(rel='stylesheet', href='/css/index.css')

block content
  aside.sidebar.panel.panel-info.col-md-offset-1
    header.panel-heading 领域分类
    ul.list-group
      each category in categories
        li.panel-body.list-group-item
          a(data-categoeyId="#{category.id}") #{category.name}

  article.article
    each data in datas
      section.data
        h4 #{data.title}
        #content
          span 数据标价：
            a(href="#") #{data.price}
          span 数据大小：
            a(href="#") #{data.dataSize}
          span 时间：
            a(href="#") #{data.dataTime}
          p #{data.description}
          span 发布人：
          a(href="#") #{data.owner}
block foot
