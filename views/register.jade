extends layout
block head
  link(rel='stylesheet', href='/css/register.css')

block content
  form.form-horizontal(id="myForm", action="/register", method="post")
    .center
      h1.col-sm-offset-5 注册
      .form-group
        .col-sm-10.col-sm-offset-1
          input#email.form-control(type="text", name="email", placeholder="邮箱")
          #email-error.text-danger.text-left
            small 邮箱格式不正确!
          #email-null.text-danger.text-left
            small 邮箱不能为空!
          #email-repeat.text-danger.text-left
            small 邮箱已被注册!
      .form-group
        .col-sm-10.col-sm-offset-1
          input#name.form-control(type="text", name="name", placeholder="昵称")
          #name-null.text-danger.text-left
            small 昵称不能为空!
      .form-group
        .col-sm-10.col-sm-offset-1
          input#password.form-control(type="password", name="password", placeholder="密码")
          #password-error.text-danger.text-left
            small 密码只能输入6-16个字母、数字、下划线!
      .form-group
        .col-sm-10.col-sm-offset-1
          input#repassword.form-control(type="password", placeholder="确认密码")
          #confirm-error.text-danger.text-left
            small 两次密码不一致
      .form-group
        .col-sm-offset-2
          #redirect.text-right
            small
              | 已有账号?
              a(href='/login') 立即登录
      .form-group.mrbt10
        .col-sm-6.col-sm-offset-3
          input(type="button", value="注册", id="signUp").form-control.btn-primary

block foot
  script(src="/js/register.js")